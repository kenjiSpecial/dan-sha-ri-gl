{
	"name": "dan-shari-gl",
	"version": "1.3.1",
	"description": "minimum webgl framework",
	"keywords": [],
	"main": "dist/dan-shari-gl.umd.js",
	"module": "dist/dan-shari-gl.es5.js",
	"typings": "dist/types/dan-shari-gl.d.ts",
	"files": [
		"dist"
	],
	"author": "kenji <k.saito.1985@gmail.com>",
	"repository": {
		"type": "git",
		"url": "kenjiSpecial/dan-shari-gl"
	},
	"license": "MIT",
	"engines": {
		"node": ">=6.0.0"
	},
	"scripts": {
		"lint": "tslint  --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
		"prebuild": "rimraf dist",
		"build": "tsc --module commonjs && rollup -c rollup.config.ts && typedoc --out site/documents --target es6 --theme minimal --mode file src",
		"start": "rollup -c rollup.config.ts -w",
		"deploy-docs": "ts-node tools/gh-pages-publish",
		"report-coverage": "cat ./coverage/lcov.info | coveralls",
		"commit": "git-cz",
		"semantic-release": "semantic-release",
		"semantic-release-prepare": "ts-node tools/semantic-release-prepare",
		"precommit": "lint-staged",
		"travis-deploy-once": "travis-deploy-once",
		"serve": " http-server  -p 9000"
	},
	"lint-staged": {
		"{src,test}/**/*.ts": [
			"prettier --write",
			"git add"
		]
	},
	"config": {
		"commitizen": {
			"path": "node_modules/cz-conventional-changelog"
		}
	},
	"prettier": {
		"semi": true,
		"singleQuote": true,
		"useTabs": true,
		"tabWidth": 4
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"devDependencies": {
		"@commitlint/cli": "^8.1.0",
		"@commitlint/config-conventional": "^8.1.0",
		"@types/gl-matrix": "^2.4.5",
		"@types/node": "^12.6.8",
		"colors": "^1.3.2",
		"commitizen": "^4.0.3",
		"coveralls": "^3.0.5",
		"cross-env": "^5.2.0",
		"cz-conventional-changelog": "^3.0.2",
		"husky": "^3.0.1",
		"lint-staged": "^9.2.1",
		"lodash.camelcase": "^4.3.0",
		"prettier": "^1.18.2",
		"prompt": "^1.0.0",
		"replace-in-file": "^4.1.1",
		"rimraf": "^2.6.2",
		"rollup": "^1.17.0",
		"rollup-plugin-commonjs": "^10.0.1",
		"rollup-plugin-json": "^4.0.0",
		"rollup-plugin-node-resolve": "^5.2.0",
		"rollup-plugin-sourcemaps": "^0.4.2",
		"rollup-plugin-typescript2": "^0.22.1",
		"semantic-release": "^15.13.18",
		"shelljs": "^0.8.3",
		"travis-deploy-once": "^5.0.9",
		"ts-jest": "^24.0.2",
		"ts-node": "^8.3.0",
		"tslint": "^5.18.0",
		"tslint-config-prettier": "^1.15.0",
		"tslint-config-standard": "^8.0.1",
		"typedoc": "^0.15.0",
		"typescript": "^3.5.3"
	},
	"dependencies": {
		"gl-matrix": "^3.0.0"
	}
}
